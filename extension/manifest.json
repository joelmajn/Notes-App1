{
  "manifest_version": 3,
  "name": "NotesApp - Gerenciador de Notas",
  "version": "1.0.0",
  "description": "Aplicativo completo de notas com categorias, tags, checklists e lembretes",
  
  "permissions": [
    "storage",
    "activeTab",
    "notifications"
  ],
  
  "host_permissions": [
    "*://*/*"
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "NotesApp",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "chrome_url_overrides": {
    "newtab": "widget.html"
  },
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  
  "web_accessible_resources": [
    {
      "resources": [
        "popup.html",
        "widget.html",
        "icons/*",
        "assets/*"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}